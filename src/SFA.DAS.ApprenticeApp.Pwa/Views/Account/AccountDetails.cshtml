@model SFA.DAS.ApprenticeApp.Pwa.Models.StubAuthUserDetails
@{
    Layout = "_Layout";
}

<h1 class="govuk-heading-xl">Sign in (stub)</h1>
<dl class="app-content-list">
    <div class="app-pane">
        <form method="POST" asp-action="AccountDetails" asp-controller="Account">
            <dt class="app-content-list__title">
                <label asp-for="Id">Id</label>:
            </dt>
            <dd class="app-content-list__content"><input asp-for="Id" required="required"/></dd>
