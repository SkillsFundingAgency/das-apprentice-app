<a class="app-fab" href="#addTask" data-module="app-overlay">Add a task</a>
<div class="app-overlay" id="addTask">
    <div class="app-overlay-header">
        <div class="app-overlay-header__cancel">
            <a href="#" class="app-overlay-header__link">Cancel</a>
        </div>
        <h2 class="app-overlay-header__heading">
            Add a new task
        </h2>
        <div class="app-overlay-header__save">
            <a href="#" class="app-overlay-header__link">Add</a>
        </div>
    </div>
    <div class="app-overlay__content">
        <form>
            <div class="app-form-group">
                <label class="app-label" for="title">
                    Title
                </label>
                <input class="app-input" id="title" name="title" type="text" placeholder="Title">
            </div>
            <div class="app-form-group">
                <label class="app-label" for="date">
                    Due date
                </label>
                <input class="app-input" id="date" name="date" type="date" placeholder="Due date">
            </div>
            <div class="app-form-group">
                <label class="app-label" for="time">
                    Due time
                </label>
                <input class="app-input" id="time" name="date" type="time" placeholder="Due time">
            </div>
            <div class="app-form-group">
                <fieldset class="app-fieldset app-fieldset--radios">
                    <legend class="app-fieldset__legend">
                        Set reminder
                    </legend>
                    <div class="app-radios">
                        <div class="app-radios__item">
                            <input class="app-radios__input" id="reminder-none" name="reminder" type="radio"
                                value="none">
                            <label class="app-label app-radios__label" for="reminder-none">
                                None
                            </label>
                        </div>
                        <div class="app-radios__item">
                            <input class="app-radios__input" id="reminder-time" name="reminder" type="radio"
                                value="time">
                            <label class="app-label app-radios__label" for="reminder-time">
                                At the time of activity
                            </label>
                        </div>
                        <div class="app-radios__item">
                            <input class="app-radios__input" id="reminder-5mins" name="reminder" type="radio"
                                value="5mins">
                            <label class="app-label app-radios__label" for="reminder-5mins">
                                5 minutes before
                            </label>
                        </div>

                    </div>
                </fieldset>
            </div>
            <div class="app-form-group">
                <fieldset class="app-fieldset">
                    <legend class="app-fieldset__legend">
                        Category
                    </legend>
                    <div class="app-radios">
                        <div class="app-radios__item">
                            <input class="app-radios__input" id="category-none" name="category" type="radio"
                                value="none">
                            <label class="app-label app-radios__label" for="category-none">
                                None
                            </label>
                        </div>
                        <div class="app-radios__item">
                            <input class="app-radios__input" id="category-assignment" name="category" type="radio"
                                value="assignment">
                            <label class="app-label app-radios__label" for="category-assignment">
                                <span class="app-tag">Assignment</span>
                            </label>
                        </div>
                        <div class="app-radios__item">
                            <input class="app-radios__input" id="category-deadline" name="category" type="radio"
                                value="deadline">
                            <label class="app-label app-radios__label" for="category-deadline">
                                <span class="app-tag app-tag--red">Deadline</span>
                            </label>
                        </div>
                        <div class="app-radios__item">
                            <input class="app-radios__input" id="category-epa" name="category" type="radio" value="epa">
                            <label class="app-label app-radios__label" for="category-epa">
                                <span class="app-tag app-tag--pink">End-point assessment</span>
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
        </form>
        <div class="app-card">
            <div action="govuk-grid-row">
                <div class="govuk-grid-column-three-quarters">
                <p class="govuk-body"> Link task to the knowledge, skills and behaviours (KSBs) it will help you gain.</p>
               
                </div>
            </div>
        </div>
    </div>
</div>