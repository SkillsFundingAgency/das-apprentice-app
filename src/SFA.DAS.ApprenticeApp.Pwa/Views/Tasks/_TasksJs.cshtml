<script type="text/javascript">
    $(document).ready(function () {
        $('.deleteTask').on('click', function () {
            $.ajax({
                type: "POST",
                url: '@Url.Action("DeleteApprenticeTask", "Tasks")',
                data: { PARAM1: $(this).siblings('.taskId').val(), PARAM2: "false" },
                dataType: "json",
                contentType: "application/json"
            });
            return false;
        });
    });
</script>

