@model SFA.DAS.ApprenticeApp.Pwa.ViewModels.TasksPageModel

@{
    ViewData["Title"] = "Tasks";
    ViewData["Section"] = "Tasks";
    Layout = "_Layout";
}

<h1 class="govuk-heading-xl">Your tasks</h1>
<div class="app-tabs" data-module="app-tabs">
    <div class="app-page-header app-sticky">
        <ul class="app-tabs__list">
            <li class="app-tabs__list-item app-tabs__list-item--selected todo-element">
                <a class="app-tabs__tab todo" href="#todo">
                    To do
                </a>
            </li>
            <li class="app-tabs__list-item done-element">
                <a class="app-tabs__tab done" href="#done">
                    Done
                </a>
            </li>
        </ul>
        <partial name="_Filter.cshtml" />
    </div>

    <div id="filters-set" style="margin: 0 0 15px 0;"></div>
    

    <div id="tasks-display">
        <div class="loader"></div>
    </div>
</div>

<a asp-controller="Tasks" asp-action="Add" class="app-fab">
    <span>Add a task</span>
</a>

@await Html.PartialAsync("_TasksJs.cshtml", Model)