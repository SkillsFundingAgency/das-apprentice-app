<div class="app-page-header">
    <h1 class="govuk-heading-xl app-page-header__heading">Your tasks</h1>
</div>
<div class="app-tabs-wrap">
    <div class="app-tabs">
        <ul class="app-tabs__list">
            <li class="app-tabs__list-item">
                <a class="app-tabs__tab app-tabs__tab--selected" href="#tasksTodo">
                    To do
                </a>
            </li>
            <li class="app-tabs__list-item">
                <a class="app-tabs__tab" href="#tasksDone">
                    Done
                </a>
            </li>
        </ul>
    </div>
    <div class="app-sort">
        Sort by:
    </div>
</div>

<div class="app-tabs">
    <div class="app-tabs__panel" id="tasksTodo">
        todo
    </div>
    <div class="app-tabs__panel app-tabs__panel--hidden" id="tasksDone">
        done
    </div>
</div>


<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
    <h1>Test with jquery</h1>
<div>
        <div>
            <button id="showTodo">To Do</button>

            <button id="showDone">Done</button>

        </div>

        <script>
            $(document).ready(function () {
                $("#showTodo").click(function () {
                    $('#ShowToDoPartial').show()
                    $('#ShowToDoPartial').load('@Url.Action("ToDoPartial", "Tasks")');
                });

                $("#showDone").click(function () {

                    $('#ShowDonePartial').load('@Url.Action("DonePartial", "Tasks")');
                });
            });
        </script>

        <div class="app-pane" id="ShowToDoPartial"></div>
        <div id="ShowDonePartial"></div>

</div>
    
    