@model SFA.DAS.ApprenticeApp.Pwa.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutBasic";
}

<style>
    html, body, .govuk-template, .govuk-template__body, main.app-main--basic {
        height: 100%;
        margin: 0;
        background: #1D70B8 !important;
    }

    .govuk-header,
    .govuk-phase-banner,
    .govuk-skip-link {
        display: none !important;
    }

    #js-home-splash {
        min-height: 100dvh;
        background: #1D70B8 !important;
        color: #fff !important;
        display: flex;
        flex-direction: column;
        box-sizing: border-box;
        text-align: center;
    }

        #js-home-splash .app-pages-home__dfe {
            padding: 24px 0 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            #js-home-splash .app-pages-home__dfe img {
                height: 34px;
                width: auto;
                display: block;
            }

        #js-home-splash .app-pages-home__middle {
            flex: 1;
            display: flex;
            align-items: flex-start;
            justify-content: center;
            padding: 90px 24px 0;
            box-sizing: border-box;
        }

        #js-home-splash .app-pages-home__brand {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            max-width: 900px;
        }

        #js-home-splash .app-logo-animated {
            width: min(70vw, 520px);
            height: auto;
            display: block;
        }

        #js-home-splash .app-pages-home__bottom {
            padding: 0 24px 24px;
            text-align: center;
            box-sizing: border-box;
        }

        #js-home-splash .govuk-body-s {
            color: #fff !important;
        }

        #js-home-splash .app-button {
            width: 100%;
            max-width: 720px;
            height: 64px;
            border: 2px solid #fff;
            background: transparent;
            color: #fff;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-weight: 400;
            font-size: 28px;
            border-radius: 0;
            padding: 0 18px;
            margin: 0 auto 26px;
            box-sizing: border-box;
            cursor: pointer;
            opacity: 0;
            transform: translateY(10px);
            animation: fadeInButton 400ms ease-out forwards;
            animation-delay: 1.8s;
        }
    @@keyframes fadeInButton {
        to

    {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<div class="app-pages-home" id="js-home-splash">
    <div class="app-pages-home__dfe">
        <img src="/assets/images/dfe-crown.png" alt="Department for Education" />
    </div>

    <div class="app-pages-home__middle">
        <div class="app-pages-home__brand">
            <img id="js-animated-logo"
                 class="app-logo-animated"
                 src="/assets/images/wing-animated.svg"
                 alt="Your Apprenticeship" />
        </div>
    </div>

    <div class="app-pages-home__bottom">
        <button id="js-sign-in"
                class="app-button"
                type="button"
                onclick="location.href='@Url.Action("Authenticated", "Account")'">
            Sign in
        </button>

        <p class="govuk-body-s govuk-!-margin-bottom-2">Your Apprenticeship app version 1.5</p>
        <p class="govuk-body-s govuk-!-margin-bottom-8">You'll need a GOV.UK One Login to use this service</p>
    </div>
</div>

<script>
    (function () {
        var img = document.getElementById('js-animated-logo');
        if (!img) return;

        var baseSrc = img.getAttribute('src');
        if (!baseSrc) return;

        baseSrc = baseSrc.split('?')[0];
        img.setAttribute('src', baseSrc + '?v=' + Date.now());
    })();
</script>
