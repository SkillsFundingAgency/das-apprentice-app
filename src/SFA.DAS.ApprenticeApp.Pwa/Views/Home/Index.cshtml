@model SFA.DAS.ApprenticeApp.Pwa.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutBasic";
}

<div class="app-home__header">
    <div class="app-home__gov-logo">
        <img src="../assets/images/crown-logo.svg" alt="Crown Logo" class="app-home__crown-logo"> 
    </div>
</div>
<div class="app-home">
    <div class="app-block--top"><!-- Help --></div>
    <div class="app-block--center">
        <img src="/assets/images/apprentice-app-logo.svg" alt="Apprentice App Logo" class="app-home__logo" />
    </div>
    <div class="app-block--bottom">
        <button class="govuk-button govuk-!-margin-bottom-8" onclick="location.href='@Url.Action("Authenticated", "Account")'">Sign in</button>
        <p class="govuk-body-s">You'll need a GOV.UK One Login to use this service.</p>
        <p class="govuk-body-s">Version 1.0.0</p>
    </div>
</div>