@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutBasic";

}
<svg aria-hidden="true" focusable="false" style="width:0;height:0;position:absolute;">
    <radialGradient id="grad" cx="0" cy="0" r="1" gradientUnits="userSpaceOnUse" gradientTransform="translate(2.21423 1.85486) rotate(48.3741) scale(37.2642 289.349)">
        <stop stop-color="#832C91"/>
        <stop offset="0.524427" stop-color="#AB000F"/>
        <stop offset="1" stop-color="#A65C2E"/>
    </radialGradient>
</svg>

<div class="app-pages-welcome">
    <div class="app-pages-welcome__header">
        <div class="app-pages-welcome__gradient">
            <h1 class="app-pages-welcome__heading">Welcome to the Your Apprenticeship app</h1>
        </div>
    </div>
    <div class="app-pages-welcome__middle">
        <ul class="app-icon-list  app-icon-list--l">
           <li>
              <span class="app-icon-list__icon app-icon-list__icon-grad">
                 <svg>
                    <use xlink:href="/assets/images/icons.svg#tasks"></use>
                 </svg>
              </span>
              <span>Organise your workload by adding tasks you need to do and setting reminders for
              them.</span>
           </li>
           <li>
              <span class="app-icon-list__icon app-icon-list__icon-grad">
                 <svg>
                    <use xlink:href="/assets/images/icons.svg#ksbs"></use>
                 </svg>
              </span>
              <span>Gather evidence for assessments by linking tasks to the
              knowledge, skills and behaviours (KSBs) they helped you gain.</span>
           </li>
           <li>
              <span class="app-icon-list__icon app-icon-list__icon-grad">
                 <svg>
                    <use xlink:href="/assets/images/icons.svg#support"></use>
                 </svg>
              </span>
              <span>Access useful guidance about apprenticeships and the support that is available to
              you.
              </span>
           </li>
           <li>
              <span class="app-icon-list__icon app-icon-list__icon-grad">
                 <svg>
                    <use xlink:href="/assets/images/icons.svg#account"></use>
                 </svg>
              </span>
              <span>View details about your apprenticeship such as your planned end date.</span>
           </li>
        </ul>
    </div>
    <div class="app-pages-welcome__bottom">
        <a class="app-button govuk-button--start" asp-controller="Tasks" asp-action="Index">Start now
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19"
                viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
            </svg></a>
    </div>
</div>