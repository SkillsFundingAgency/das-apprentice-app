@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutBasic";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <style>
        body {
            font-family: GDS Transport;
            margin: 0;
            padding: 0;
            background-color: #fff;
        }

        .container {
            text-align: center;
            padding: 0;
            margin: 0;
        }

        .header {
            background: url('/assets/images/welcomepage/welcome-page-background.svg') no-repeat center center;
            background-size: cover;
            color: white;
            height: 50vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

         .header h1 {
            margin: 0;
            font-size: 32px;
            position: absolute;
            font-style: normal;
            font-weight: 700;
            line-height: 35px;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .content {
            margin: 20px auto;
            max-width: 600px;
            text-align: left;
            padding: 20px;
        }

        .content p {
            margin: 20px 0;
            font-size: 1.1em;
        }

        .icon-text {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .icon-text img {
            width: 30px;
            height: 30px;
            margin-right: 10px;
        }

        .start-button {
            display: block;
            margin: 40px auto;
            padding: 10px 20px;
            background-color: #006400;
            color: white;
            text-decoration: none;
            font-size: 1.2em;
            border-radius: 5px;
            text-align: center;
            width: 150px;
        }

        .start-button:hover {
            background-color: #004d00;
        }

        @@media (max-width: 768px) {
            .header h1 {
                font-size: 2em;
            }

            .icon-text p {
                font-size: 1em;
            }
        }

        @@media (max-width: 700px) {
            .header h1 {
                font-size: 1.5em;
            }

            .icon-text img {
                width: 25px;
                height: 25px;
            }

            .start-button {
                width: 100px;
                font-size: 1em;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Welcome to the My Apprenticeship App</h1>
        </div>
        <div class="content">
            <div class="icon-text">
                <img src="/assets/images/welcomepage/person-icon.svg" alt="Person Icon">
                <p>View details about your apprenticeship such as your planned end date.</p>
            </div>
            <div class="icon-text">
                <img src="/assets/images/welcomepage/checklist-icon.svg" alt="Checklist Icon">
                <p>Organise your workload by adding tasks you need to do and setting reminders for them.</p>
            </div>
            <div class="icon-text">
                <img src="/assets/images/welcomepage/brain-icon.svg" alt="Brain Icon">
                <p>Gather evidence for your end-point assessment (EPA) by linking tasks to the knowledge, skills and behaviours (KSBs) they helped you gain.</p>
            </div>
            <div class="icon-text">
                <img src="/assets/images/welcomepage/question-icon.svg" alt="Question Icon">
                <p>Access useful guidance about apprenticeships and the support that is available to you.</p>
            </div>
                <a href="/Profile" class="start-button">Start now</a>
        </div>
    </div>
</body>
</html>
