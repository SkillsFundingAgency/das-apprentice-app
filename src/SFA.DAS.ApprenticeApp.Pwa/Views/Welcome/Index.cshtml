@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutBasic";

}
<div class="app-pages-welcome">
    <div class="app-pages-welcome__header">

        <div class="app-pages-welcome__gradient">
            <h1 class="app-pages-welcome__heading">Welcome to the My Apprenticeship App</h1>
        </div>
    </div>
    <div class="app-pages-welcome__middle">
        <ul class="app-icon-list  app-icon-list--l">
            <li>
                <span class="app-icon-list__icon svg-placeholder"></span>
                <span>Organise your workload by adding tasks you need to do and setting reminders for
                    them.</span>
            </li>
            <li>
                <span class="app-icon-list__icon svg-placeholder"></span>
                <span>Gather evidence for your end-point assessment (EPA) by linking tasks to the
                    knowledge, skills and behaviours (KSBs) they helped you gain.</span>
            </li>
            <li>
                <span class="app-icon-list__icon svg-placeholder"></span>
                <span>Access useful guidance about apprenticeships and the support that is available to
                    you.
                </span>
            </li>
            <li>
                <span class="app-icon-list__icon svg-placeholder"></span>
                <span>View details about your apprenticeship such as your planned end date.</span>
            </li>
        </ul>
    </div>
    <div class="app-pages-welcome__bottom">
        <a class="app-button govuk-button--start" asp-controller="Account" asp-action="AccountLandingPage">Start now
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19"
                viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
            </svg></a>
    </div>
</div>