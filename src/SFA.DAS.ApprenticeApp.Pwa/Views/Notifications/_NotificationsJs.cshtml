<script type="text/javascript">
    $(document).ready(function () {

        const removeNotification = (id, button) => {
                const taskId = button.dataset.taskId;
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteNotification", "Notifications")',
                    data: { taskId },
                    complete: function () {
                    $('#notification-' + taskId).hide();
                    },
                    dataType: "json"
                });

            }

            $('body').on('click', '.remove-notification', function (e) {
                const modalContent = {
                    message: 'Are you sure you want to delete this notification?',
                    confirmButton: 'Delete notification'
                }
                const modal = new Modal(this, removeNotification, null, modalContent).init();
            });

    })
</script>
