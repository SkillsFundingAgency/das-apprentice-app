@using SFA.DAS.ApprenticeApp.Pwa.ViewModels
<link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />

@model IEnumerable<NotificationViewModel>

<div class="notifications-container">
    
    @foreach (var notification in Model)
    {
        <div class="notification-card @if(notification.IsNew) {
    <text>bg-light-green</text>
 }">
            <h5>
                <a href="@notification.LinkUrl" class="text-success">@notification.Title</a>
            </h5>
            <p>@notification.Description</p>
            <small class="text-muted">@notification.TimeAgo</small>
            <button class="btn btn-link text-danger delete-button">Delete</button>
        </div>
    }
</div>
