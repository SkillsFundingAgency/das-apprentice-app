@{
    ViewData["Title"] = "Terms";
    Layout = "_LayoutBasic";
}
<div class="app-main">
    <div class="app-main__inner">
        <div class="app-page-header govuk-!-margin-bottom-8">
            <h1 class="app-page-header__heading">Terms &amp; conditions</h1>
        </div>
