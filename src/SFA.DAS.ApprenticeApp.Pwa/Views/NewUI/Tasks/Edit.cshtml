@using SFA.DAS.ApprenticeApp.Domain.Models
@using SFA.DAS.ApprenticeApp.Pwa.ViewHelpers
@model SFA.DAS.ApprenticeApp.Pwa.ViewModels.EditTaskPageModel
@{
    ViewData["Title"] = "Tasks";
    ViewData["Section"] = "Tasks";
    ViewBag.HideNavigation = true;
}
@section BackLink {
    <a class="govuk-back-link app-back-link js-back-link" href="#">Back without saving</a>
}
<h1 class="govuk-heading-xl">
    Edit task
</h1>
<partial name="_HelpTasks.cshtml" />
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="app-overlay__content add-edit-content-area">
            <div class="govuk-error-summary govuk-visually-hidden app-error-summary" aria-hidden="true" id="errorSummary">
                <div role="alert">
                    <h2 class="govuk-error-summary__title">
                        There is a problem
                    </h2>
                    <div class="govuk-error-summary__body">
                        <ul class="govuk-list govuk-error-summary__list">
                        </ul>
                    </div>
                </div>
            </div>
            <form action="@Url.Action("Edit", "Tasks")" method="post" enctype="multipart/form-data" class="form" data-module="task-validation" novalidate>
                <input type="hidden" id="TaskId" name="TaskId" value="@Model.Task.TaskId" />
                <input type="hidden" id="Status" name="Status" value="@Model.Task.Status" />
                <input type="hidden" id="StatusId" name="StatusId" value="@Model.StatusId" />
                <input type="hidden" id="TaskFiles" name="TaskFiles" value="@Model.Task.TaskFiles" />
                <input type="hidden" id="TaskLinkedKsbs" name="TaskLinkedKsbs" value="@Model.Task.TaskLinkedKsbs" />
                <input type="hidden" id="CompletionDateTime" name="CompletionDateTime" value="@Model.Task.CompletionDateTime" />
                <input type="hidden" id="Apprenticeshipid" name="Apprenticeshipid" value="@Model.Task.ApprenticeshipId" />
                <partial name="_AddEditForm" model="@Model" />
                <div class="govuk-form-group">
                    <input type="hidden" id="linked-ksb-ids" name="ksbslinked" value="@Model.LinkedKsbGuids"
                           asp-for="@Model.Task.KsbsLinked" />
                    <div id="linked-ksb-details">
                        @foreach (var ksbProgressData in Model.KsbProgressData)
                        {
                            <a asp-controller="Ksb" asp-action="AddUpdateKsbProgress" asp-route-id="@ksbProgressData.KsbId" class="app-card">
                                    <div class="app-card__header">
                                        <h2 class="app-card__heading">@ksbProgressData.KsbKey</h2>
                                    </div>
                                    <p>@ksbProgressData.Detail</p>
                                    <span>
                                        @{
                                        var statusItem = @ksbProgressData.CurrentStatus;
                                        if (statusItem == null)
                                        {
                                            statusItem = KSBStatus.NotStarted;
                                        }
                                        string statusItemDisplay = statusItem.GetEnumDescription();
                                        <div class="ksb-status-display app-tag app-tag--status-@statusItemDisplay.ToLower().Replace(" ", "").Replace("-", "")">
                                            <text>@statusItemDisplay</text>
                                        </div>
                                        }
                                    </span>
                          </a>
                        }
                    </div>
                </div>

            
            <div class="govuk-button-group app-button-group">
                <a class="govuk-back-link app-back-link js-back-link" href="#">Back without saving</a>
                <button type="submit" class="govuk-button govuk-!-margin-bottom-8" data-module="govuk-button">
                    Save and continue
                </button>
            </div>
             </form>
            <form id="link-ksb-form" action="@Url.Action("LinkKsbs", "Ksb")" method="post" class="govuk-!-display-none">
                <input type="hidden" name="taskId" value="@Model.Task.TaskId" />
                <input type="hidden" name="linkedKsbGuids" value="@Model.LinkedKsbGuids" />
                <input type="hidden" name="status" value="@Model.StatusId" />
            </form>
        </div>
    </div>
    <div class="govuk-grid-column-one-third app-column-sticky">
        <ul class="govuk-list govuk-list--spaced">
            <li>
                <a href="#" id="move-task-status" data-status-id="@(Model.StatusId == 0 ? 1 : 0)" class="govuk-link govuk-link--no-visited-state app-icon-list__link-wrap">
                    <span class="app-icon-item">
                        <svg width="24" height="24" class="app-icon-item__icon">
                            <use href="/assets/icons/sprite.svg#checkbox-done"></use>
                        </svg>
                        <span class="app-icon__text">Move this task to @(Model.StatusId == 0 ? "Done" : "To do")</span>
                    </span>
                </a>
            </li>
            <li>
                <a href="#" id="share-task" class="govuk-link govuk-link--no-visited-state app-icon-list__link-wrap">
                    <span class="app-icon-item">
                        <svg width="24" height="24" class="app-icon-item__icon">
                            <use href="/assets/icons/sprite.svg#share"></use>
                        </svg>
                        <span class="app-icon__text">Share this task</span>
                    </span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("ConfirmDelete", "Tasks", new { id = Model.Task.TaskId, status = Model.StatusId })" class="govuk-link govuk-link--no-visited-state app-icon-list__link-wrap app-link--destructive">
                    <span class="app-icon-item">
                        <svg width="24" height="24" class="app-icon-item__icon">
                            <use href="/assets/icons/sprite.svg#delete"></use>
                        </svg>
                        <span class="app-icon__text">Delete task</span>
                    </span>
                </a>
            </li>
        </ul>
    </div>
</div>
<script src="~/js/task-validation.js" asp-append-version="true"></script>
<script src="~/js/task-reminder.js" asp-append-version="true"></script>
<script>
    document.getElementById('share-task').addEventListener('click', function (e) {
        e.preventDefault();
        if (!navigator.share) return;
        var title = document.getElementById('Task_Title').value;
        var note = document.getElementById('note').value.trim();
        var shareData = { title: title };
        if (note) shareData.text = note;
        navigator.share(shareData).catch(function () {});
    });

    document.getElementById('move-task-status').addEventListener('click', function (e) {
        e.preventDefault();
        var taskId = document.getElementById('TaskId').value;
        var statusId = this.dataset.statusId;
        var url = '@Url.Action("ChangeTaskStatus", "Tasks")' + '?taskId=' + encodeURIComponent(taskId) + '&statusId=' + statusId;

        fetch(url)
                .then(function () {
                    window.location.href = '@Url.Action("Index", "Tasks")' + '?status=' + statusId;
                });
    });
</script>